<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ResActivity">
    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:id="@+id/relayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent">
        <ImageView
            android:padding="3dp"
            android:layout_weight="4.5"
            android:id="@+id/trove"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/iconnext0" />

        <EditText
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:background="@drawable/bovienrelay"
            android:id="@+id/txttimkiem"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"
            android:hint="Tim kiếm"
            android:textStyle="italic" />

        <ImageView
            android:layout_weight="4.5"
            android:id="@+id/timkiem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"

            android:layout_marginTop="0dp"

            android:src="@drawable/icontimkiem" />


    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/relayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="DS.Nhà Hàng"
                android:padding="7dp"
                android:textSize="26dp"/>
            <ImageView
                android:padding="1dp"
                android:src="@drawable/anhgiohang"
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <ListView
            android:id="@+id/listviewnhahang"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AccountAcivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/top"
        android:background="#fa0310">

        <Button
            android:id="@+id/taikhoan_dangxuat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:background="@drawable/iconsetting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            android:padding="3dp"
            android:text="T.Khoáº£n"
            android:textColor="#ffff"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:layout_marginTop="0dp"
        android:background="@drawable/bovientaikhoan">

        <ImageView
            android:id="@+id/people"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/iconpeople" />

        <TextView
            android:id="@+id/taikhoan_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/people"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:padding="6dp"
            android:text="name"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/taikhoan_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/taikhoan_name"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:padding="6dp"
            android:text="email"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/taikhoan_sdt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/taikhoan_email"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:padding="6dp"
            android:text="sdt"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/taikhoan_diachi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/taikhoan_sdt"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:padding="6dp"
            android:text="diachi"
            android:textSize="22dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/iconemail"
            android:layout_below="@id/taikhoan_name"
            android:layout_marginTop="17dp"
            android:padding="7dp"
            android:layout_marginLeft="11dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/iconphone"
            android:layout_below="@id/taikhoan_email"
            android:layout_marginTop="17dp"
            android:padding="3dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/iconhouse"
            android:padding="5dp"
            android:layout_below="@+id/taikhoan_sdt"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/iconname"
            android:padding="3dp"
            android:layout_below="@+id/people"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="11dp"/>
    </RelativeLayout>
    <ImageView
        android:layout_marginTop="2dp"
        android:id="@+id/bt_hoat_dong"
        android:src="@drawable/iconnext0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>